<div class="card">
  <div class="card-header">
   <h4>Add Friend<h4>
  </div>
  <div class="card-body">


<%= form_with(model: friend, local: true) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% friend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control-plaintext", placeholder: "First Name" %>
  </div>

  <div class="field form-group">

    <%= form.text_field :last_name, class:"form-control-plaintext", placeholder: "Last Name" %>
  </div>

  <div class="field form-group">

    <%= form.text_field :email, class:"form-control-plaintext", placeholder: "Email" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control-plaintext", placeholder: "Phone" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :instagram, class:"form-control-plaintext", placeholder: "Instagram" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :friend_user_id ,class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-success', value: 'Save' %>
  </div>
  <br/>
<% end %>

  </div>
</div>
