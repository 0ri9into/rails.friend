<div class="card" style="width: 44rem;">
  <div class="card-header">
    <h4>Log in</h4>
  </div>
  <ul class="list-group list-group-flush">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:"form-control-plaintext", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control-plaintext", placeholder: "Password" %>
  </div>

      <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

      <div class="actions">
    <%= f.submit "Log in", class:"btn btn-success" %>
        <br/>

  </div>
<% end %>
  </ul>
</div>

<%= render "devise/shared/links" %>
